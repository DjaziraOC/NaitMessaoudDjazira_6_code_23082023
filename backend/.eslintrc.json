//----------------------------ESLint-------------------------------------
//ESLint est un projet open source qui aide à trouver et à résoudre les
//problèmes avec code JavaScript.  
//il va comparer le code source à un ensemble de règles qui ont été 
//définit et il va aider à les respecter.

{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
